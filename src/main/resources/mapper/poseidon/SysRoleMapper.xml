<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muggle.poseidon.mapper.SysRoleMapper">

    <sql id="base">`name`,`code`,created,updated,remark</sql>
    <select id="getRoleByUserId" resultType="com.muggle.poseidon.entity.pojo.SysRole">
        SELECT <include refid="base"/> FROM sys_role r LEFT JOIN `sys_user_role` ur ON ur.role_id=r.id
        where ur.user_id = #{id}
    </select>



</mapper>
